
@{
    ViewData["Title"] = "TaskIndex";
}
@model List<Tasks>

<h1>Your Tasks</h1>

<table class="table table-dark">
    <tr>
        <th>Task</th>
        <th>Due Date</th>
        <th>Completed?</th>
        <th>Change Status</th>
        <th>Delete</th>
    </tr>

    @foreach(var task in Model)
    {
<tr>
    <td>@task.Description</td>
    <td>@task.DueDate</td>
    <td>@task.Completed</td>
    <td><a href="/TaskList/UpdateComplete?id=@task.Id">Update Complete Status</a></td>
    <td><a href="/TaskList/DeleteTask?id=@task.Id">Delete Task</a></td>
</tr>
    }


</table>

<h3><a href="/TaskList/TaskForm">Add Task</a></h3>




